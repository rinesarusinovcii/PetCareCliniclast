<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="shop"
            type="com.example.petcareclinic_last.models.Shop" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Pet Picture -->
        <ImageView
            android:id="@+id/ivPetPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@{shop.petPic}" />

        <!-- Pet Name -->
        <TextView
            android:id="@+id/tvPetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="@{shop.petName}"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- Pet Breed -->
        <TextView
            android:id="@+id/tvPetBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="@{shop.petBreed}" />

        <!-- Pet Age -->
        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Age: @{String.valueOf(shop.age)} years" />

        <!-- Pet Price -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Price: $@{String.valueOf(shop.price)}" />

    </LinearLayout>
</layout>